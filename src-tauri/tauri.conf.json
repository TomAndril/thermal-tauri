{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Thermal Printer",
  "version": "0.1.0",
  "identifier": "com.tomasnasjleti.thermal-printer",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Thermal Printer",
        "width": 600,
        "height": 480,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "bundleName": "Thermal Printer"
    }
  }
}
